{
  "name": "pocket-agent",
  "version": "2.5.2",
  "description": "Desktop AI agent with persistent memory powered by Claude Agent SDK",
  "main": "dist/main/index.js",
  "scripts": {
    "sync-version": "node scripts/sync-version.js",
    "prebuild": "npm run sync-version",
    "build": "tsc",
    "start": "npm run build && npm run electron",
    "dev": "node scripts/sync-version.js && tsc && npm run electron",
    "watch": "tsc -w",
    "preelectron": "node scripts/check-native.js",
    "electron": "electron .",
    "clean": "node -e \"fs.rmSync('dist',{recursive:true,force:true})\"",
    "rebuild": "npm run clean && npm run build",
    "rebuild:native": "npx electron-rebuild -f -w better-sqlite3",
    "postinstall": "npx electron-rebuild -f -w better-sqlite3",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "dist": "npm run build && electron-builder --mac",
    "dist:local": "npm run build && electron-builder --mac --config.mac.identity=null",
    "dist:win": "npm run build && electron-builder --win",
    "dist:win:local": "npm run build && electron-builder --win --config.win.forceCodeSigning=false"
  },
  "build": {
    "appId": "com.unstablemind.pocket-agent",
    "productName": "Pocket Agent",
    "directories": {
      "output": "release"
    },
    "publish": {
      "provider": "github",
      "owner": "KenKaiii",
      "repo": "pocket-agent"
    },
    "mac": {
      "artifactName": "Pocket-Agent-${version}-${arch}-mac.${ext}",
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "notarize": true
    },
    "win": {
      "artifactName": "Pocket-Agent-${version}-${arch}-win.${ext}",
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "artifactName": "Pocket-Agent-${version}-${arch}-setup.${ext}",
      "shortcutName": "Pocket Agent",
      "uninstallDisplayName": "Pocket Agent"
    },
    "dmg": {
      "artifactName": "Pocket-Agent-${version}-${arch}.${ext}",
      "background": "build/background.png",
      "icon": "build/icon.icns",
      "iconSize": 80,
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 130,
          "y": 190
        },
        {
          "x": 410,
          "y": 190,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "asar": false,
    "afterPack": "./build/afterPack.js",
    "afterAllArtifactBuild": "./build/afterAllArtifactBuild.js",
    "files": [
      "dist/**/*",
      "ui/**/*",
      "assets/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/"
      },
      {
        "from": ".claude/",
        "to": "app/.claude/"
      }
    ]
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "0.2.38",
    "better-sqlite3": "^12.6.2",
    "city-timezones": "^1.3.3",
    "electron-updater": "^6.7.3",
    "grammy": "^1.40.0",
    "node-cron": "^4.2.1",
    "officeparser": "^6.0.4",
    "openai": "^6.21.0",
    "puppeteer-core": "^24.37.2",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.2.3",
    "@types/node-cron": "^3.0.11",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "electron": "^40.4.0",
    "electron-builder": "^26.7.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
